<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <TextView
        android:id="@+id/createAssessHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assessment Creation"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/createAssessTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createAssessHeader"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Title (i.e. Performance Assessment)"
        android:inputType="text"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/assessDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createAssessTitle"
        android:text="Due Date:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/createAssessDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/assessDueDate"
        android:layout_below="@+id/createAssessTitle"
        android:ems="10"
        android:hint="Select a Date"
        android:textSize="20sp"
        android:textAlignment="viewEnd" />

    <Button
        android:id="@+id/createAssessSaveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_above="@+id/createAssessCancelBtn" />

    <Button
        android:id="@+id/createAssessCancelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignParentBottom="true" />


</RelativeLayout>